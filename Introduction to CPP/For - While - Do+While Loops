For:
#include<iostream>
using namespace std;
int main(){
  for(int x = 0; x<10; x++){
    cout<<x<<endl;
    }
    cin.get();
}



While:
#include<iostream>
using namespace std;
int main(){
  int x = 0;
  while(x<10){
    cout<<x<<endl;
    x++;
    }
    cin.get();
}



Do-While:
#include<iostream>
using namespace std;
int main(){
  int x= 0;
  x=0;
  do{
      cout<<"Hello World\n";
    }
  while(x! = 0);
  cin.get();
  
 }
